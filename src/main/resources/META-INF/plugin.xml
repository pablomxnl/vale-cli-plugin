<idea-plugin xmlns:xi="http://www.w3.org/2001/XInclude" package="org.ideplugins.vale_cli_plugin">
    <id>org.ideplugins.vale-cli-plugin</id>
    <name>Vale CLI</name>
    <vendor>
        The Dude Plugins
    </vendor>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>


    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <!-- plugin settings -->
        <applicationConfigurable parentId="tools"
                                 instance="org.ideplugins.vale_cli_plugin.settings.ValePluginSettingsConfigurable"
                                 id="org.ideplugins.vale_cli_plugin.settings.ValePluginSettingsConfigurable"
                                 displayName="Vale CLI"
        />

        <notificationGroup displayType="STICKY_BALLOON" id="Vale CLI Plugin Update" />

        <statusBarWidgetFactory implementation="org.ideplugins.vale_cli_plugin.languageserver.ValeLsStatusBarWidgetFactory"
                                id="org.ideplugins.vale-cli-plugin" />
        <notificationGroup displayType="STICKY_BALLOON" id="vale-cli-plugin-update"/>
        <postStartupActivity implementation="org.ideplugins.vale_cli_plugin.activity.ValeStartupActivity"
                             id="valeStartupActivity"/>
        <postStartupActivity implementation="org.ideplugins.vale_cli_plugin.activity.InstallValeLsActivity"
                             id="downloadAndExtractValeLs" order="first" />

        <postStartupActivity implementation="org.ideplugins.vale_cli_plugin.activity.ValeLsRegisterLanguageServerActivity"
                             id="registerValeLs" order="last"/>
        <errorHandler implementation="org.ideplugins.vale_cli_plugin.errorhandling.SentryErrorReporter"/>
    </extensions>

    <xi:include href="/META-INF/plugin-lsp-client.xml"/>
</idea-plugin>